# LLM API 配置
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your-api-key-here

# 模型配置
LLM_DEFAULT_MODEL=qwen-flash
# 支持的模型列表（用逗号分隔，如果未设置则使用默认列表）
# LLM_SUPPORTED_MODELS=qwen-flash
# 是否启用模型验证（默认：true）
# LLM_ENABLE_MODEL_VALIDATION=true

# 模型默认参数
LLM_DEFAULT_TEMPERATURE=0.7
LLM_DEFAULT_MAX_TOKENS=2000
LLM_DEFAULT_TOP_P=1.0
LLM_DEFAULT_FREQUENCY_PENALTY=0.0
LLM_DEFAULT_PRESENCE_PENALTY=0.0

# 服务配置
PORT=3000
NODE_ENV=development

# 可选：API 限流配置
# 时间窗口内最大请求数（默认：100）
RATE_LIMIT_MAX_REQUESTS=100
# 时间窗口大小，单位毫秒（默认：60000，即 1 分钟）
RATE_LIMIT_WINDOW_MS=60000

# AES 加密验证配置
# 是否启用 AES 加密验证（默认：true，设置为 false 可禁用）
# ENABLE_AES_AUTH=true
# AES 加密密钥（用于验证接口调用方，必须设置）
# AES_SECRET_KEY=your-secret-key-here
# 签名有效期（毫秒），默认 5 分钟
# AES_SIGNATURE_MAX_AGE=300000

# Redis 配置（用于限流和 nonce 存储）
# 是否启用 Redis（默认：false，使用内存存储；设置为 true 启用 Redis）
# ENABLE_REDIS=false
# Redis 连接 URL（如果设置，将优先使用，格式：redis://[:password@]host[:port][/db-number]）
# REDIS_URL=redis://localhost:6379/0
# Redis 主机地址（如果未设置 REDIS_URL，则使用以下配置）
# REDIS_HOST=localhost
# Redis 端口
# REDIS_PORT=6379
# Redis 密码（可选）
# REDIS_PASSWORD=
# Redis 数据库编号
# REDIS_DB=0

