{
  "name": "llm-gateway",
  "version": "0.1.0",
  "private": true,
  "description": "LLM Gateway - 大模型 API 网关服务",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "start:prod": "NODE_ENV=production pm2 start ecosystem.config.js",
    "stop:prod": "pm2 stop llm-gateway",
    "restart:prod": "pm2 restart llm-gateway",
    "delete:prod": "pm2 delete llm-gateway",
    "logs:prod": "pm2 logs llm-gateway",
    "status:prod": "pm2 status",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "ioredis": "^5.8.2",
    "openai": "^6.8.1",
    "pm2": "^6.0.13",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/node": "^20.10.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.55.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
